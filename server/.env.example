# iMentor TutorAI Chatbot - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ================================
# SERVER CONFIGURATION
# ================================
PORT=4007
NODE_ENV=development

# ================================
# DATABASE CONFIGURATION
# ================================
MONGO_URI=mongodb://localhost:27017/iMentor_chatbot

# ================================
# AI SERVICES (REQUIRED)
# ================================
# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ================================
# OPTIONAL AI SERVICES
# ================================
# DeepSeek API (Optional) - Get from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Ollama URL (Optional) - Local Ollama installation
OLLAMA_URL=http://localhost:11434

# ================================
# SECURITY
# ================================
# Generate a secure JWT secret (32+ characters)
JWT_SECRET=your_secure_jwt_secret_here_minimum_32_characters

# ================================
# FEATURE TOGGLES
# ================================
ENABLE_DEEP_SEARCH=true
ENABLE_MCP_AGENTS=true
ENABLE_FILE_UPLOAD=true
ENABLE_VOICE_FEATURES=false
ENABLE_TRAINING_MODE=false

# ================================
# PERFORMANCE SETTINGS
# ================================
MAX_FILE_SIZE=50MB
CACHE_TTL=3600
RATE_LIMIT_REQUESTS=100
MAX_CONCURRENT_REQUESTS=10

# ================================
# LOGGING
# ================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ================================
# OPTIONAL SERVICES
# ================================
# Redis for caching (Optional)
REDIS_URL=redis://localhost:6379

# Email service (Optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# ================================
# DEVELOPMENT SETTINGS
# ================================
# Set to true for development debugging
DEBUG_MODE=false
VERBOSE_LOGGING=false
