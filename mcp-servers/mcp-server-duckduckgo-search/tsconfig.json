{
  "compilerOptions": {
    "target": "ES2022",                  // Use a modern version of JavaScript
    "module": "NodeNext",                 // <<< THIS IS THE CRITICAL FIX
    "moduleResolution": "NodeNext",       // <<< THIS IS THE CRITICAL FIX
    "outDir": "./build",                  // Your output directory is correct
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}